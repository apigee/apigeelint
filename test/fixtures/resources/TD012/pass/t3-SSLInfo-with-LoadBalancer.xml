<TargetEndpoint name="default">
  <HTTPTargetConnection>
    <!-- with LB, SSLInfo is a "fallback" -->
    <SSLInfo>
      <Enabled>true</Enabled>
      <IgnoreValidationErrors>false</IgnoreValidationErrors>
      <TrustStore>truststore1</TrustStore>
    </SSLInfo>
    <LoadBalancer>
      <Server name="server1"/>
      <Server name="server2"/>
    </LoadBalancer>
  </HTTPTargetConnection>
</TargetEndpoint>
